{
  "mcpServers": {
    "recon-scanner": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "--cap-add=NET_ADMIN",
        "--device=/dev/net/tun",
        "-e", "USE_VPN=true",
        "-e", "VPN_CONFIG_PATH=/vpn/<ovpnファイル>",
        "-e", "VPN_AUTH_PATH=/vpn/auth.txt",
        "-v", "C:/Users/<ユーザー名>/Documents/GitHub/recon-mcp/vpn:/vpn:ro",
        "recon-mcp"
      ]
    }
  }
}